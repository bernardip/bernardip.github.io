<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="180dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivShoppingImage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/med_background"/>

            <TextView
                android:id="@+id/tvShoppingName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Yes We Can"
                android:layout_below="@id/ivShoppingImage"
                android:layout_alignLeft="@id/ivShoppingImage"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"/>


            <TextView
                android:id="@+id/tvShoppingPrice"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="No we cannot"
                android:layout_below="@id/tvShoppingName"
                android:layout_alignLeft="@id/tvShoppingName"
                android:gravity="center"
                android:textColor="#A9000000"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"/>

            <TextView
                android:id="@+id/tvAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvShoppingName"
                android:layout_alignRight="@id/ivShoppingImage"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="1dp"
                android:padding="2dp"
                android:text="Not Going"
                android:textColor="#FFFFFF"
                android:background="@drawable/event_not_going_background"/>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>